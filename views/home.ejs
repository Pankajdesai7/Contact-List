<html>
    <head>
        <title> 
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/308b24ef2f.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
        
    </head>
    <body>
        <div id="main">
       <div id='Contact-container'>
        <h1><i class="fas fa-address-book"></i> Contact List </h1>
        
        <ul>
            
                <% for(let i of contact_list) {%>
                    <div id="list-item">
                    <li>
                        <div id="flex">
                        <div id="name"><%= i.name %></div>
                         <div id="number"><%= i.number %></div>
                         <div id="delete"> <a href="/get-contact/?number=<%= i.number %>"> <i class="fas fa-trash"></i></a> </div>
                        </div>
                    </li>
                    </div>
                <%}%>
            
        </ul>
        </div>
        <div id="form-container">
            <div class="heading"> Add Contact </div>
            <form action="/get-practice" method="post">
            <div class="input-text">  
                <input type="text" name="name" placeholder="Enter number">
            </div>
            <div class="input-text">
                 <input type="number" name="number" placeholder="Enter Phone No.">
            </div>
            <div class="btn">
            <button type="submit"> + Add Contact</button>
            </div>
        </form>
    </div>
</div>
    </body>
</html>